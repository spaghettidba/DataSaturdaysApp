@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <div class="d-flex justify-content-center">
        <h1 class="mt-5">@ViewData["Title"]</h1>
    </div>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline mt-5 d-flex justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-danger">Click here to Logout</button>
            </form>
        }
        else
        {
            <div class="mt-5 d-flex justify-content-center">
                <p>You have successfully logged out of the application.</p>
                
            </div>
            <div class="mt-3 d-flex justify-content-center">
                <a href="/">Click here to return to the home page.</a>
            </div>
        }
    }
</header>